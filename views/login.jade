extends layout

block content
	div.containter
		form(class='col-sm-offset-4 col-sm-4 form-horizontal' role="form" method="post" action="/login" onSubmit="return false")
			div(class='panel panel-default')
				div(class='panel-heading')
					p.tc #{title}
			p
				input(type='input'  class="form-control" id="username" name="username" placeholder="请输入用户名" required)
			p
				input(type='password'  class="form-control" id="password" name="password" placeholder="请输入密码" required)
			p
				button(type="button" class="btn btn-primary btn-block" id="login1") 登陆
	script.
		window.onload=function(){
			$("#login1").click(function(){ 
				var username = $("#username").val();
				var password = $("#password").val();
				var data = {"uname":username,"upwd":password};
					$.post("/login",{
						username : username,
						password : password
					},function(data){
						alert(data);
		       			location.reload();
					})
			});
		}
	
